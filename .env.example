# Camera Cloud AI 環境変数設定例
# 本番環境では .env ファイルにこの内容をコピーして使用してください

# API設定
CAMERA_AI_HOST=0.0.0.0
CAMERA_AI_PORT=8000
CAMERA_AI_DEBUG=false

# ログ設定
CAMERA_AI_LOG_LEVEL=INFO
CAMERA_AI_LOG_FILE=camera_ai.log

# 顔認識設定
CAMERA_AI_CONFIDENCE_THRESHOLD=0.5
CAMERA_AI_USE_DNN_MODEL=false

# セキュリティ設定
CAMERA_AI_API_KEY=
CAMERA_AI_ALLOWED_ORIGINS=*

# ファイル設定
CAMERA_AI_MAX_FILE_SIZE=10485760
CAMERA_AI_TEMP_DIR=/tmp

# データベース設定（将来の拡張用）
CAMERA_AI_DATABASE_URL=